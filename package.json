{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "setup": "yarn && yarn build:packages",
    "build": "yarn -s run build-warning",
    "build-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32myarn build:packages\u001b[0m\u001b[31m to build all design-system packages\u001b[0m')\"",
    "build:all": "yarn build:packages && yarn build:documentation",
    "build:packages": "lerna run build --no-private",
    "build:documentation": "lerna exec --scope @entur/documentation -- yarn build",
    "build:code-playground": "lerna exec --scope @entur/code-playground -- yarn build",
    "lint": "lerna run lint",
    "lint:documentation": "lerna exec --scope @entur/documentation -- yarn lint --report-unused-disable-directives",
    "lint:packages": "lerna run lint --no-private",
    "start": "yarn -s run start-warning",
    "start-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32myarn start:documentation\u001b[0m\u001b[31m to start dev server for design system websit or \u001b[4m\u001b[32myarn start:code-playground\u001b[0m\u001b[31m to start Playroom \u001b[0m')\"",
    "start:documentation": "lerna exec --scope @entur/documentation -- yarn start",
    "start:code-playground": "lerna exec --scope @entur/code-playground -- yarn start",
    "cleanStart": "lerna exec --scope @entur/documentation -- yarn cleanStart",
    "test": "dts test --env=jest-environment-jsdom packages",
    "test:watch": "dts test --env=jest-environment-jsdom --watch",
    "test:single-run": "cross-env CI=true yarn test",
    "predeploy-docs": "yarn build:all",
    "deploy-docs": "lerna exec --scope @entur/documentation -- yarn deploy-docs",
    "deploy-docs:preview": "lerna exec --scope @entur/documentation -- yarn deploy-docs:preview",
    "new-package": "./bin/new-package.js",
    "superClean": "rm -rf node_modules apps/documentation/.docz apps/*/node_modules apps/*/dist packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "prepublishOnly": "yarn build:packages && yarn lint && yarn test:single-run",
    "lerna:publish": "lerna publish --conventional-commits",
    "lerna:prerelease": "lerna publish --conventional-commits --conventional-prerelease --pre-dist-tag next --preid beta",
    "prettier": "prettier --write src/**/*\\.tsx packages/**/*\\.tsx",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@emotion/core": "10.0.28",
    "classnames": "^2.3.1",
    "copy-text-to-clipboard": "^3.0.1",
    "hex-rgb": "^5.0.0",
    "node-sass": "^4.14.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^27.4.0",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "case": "^1.6.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "dts-cli": "^1.1.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.0",
    "inquirer": "^8.1.2",
    "jest": "^27.4.7",
    "jest-axe": "^4.0.0",
    "lerna": "^3.16.4",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rollup-plugin-sass": "^1.2.2",
    "tslib": "^2.3.1",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "babel-plugin-remove-graphql-queries": "2.9.14",
    "gatsby-plugin-mdx": "1.2.4",
    "@types/react": "16.9.56"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "globalSetup": "./global-setup.js"
  },
  "volta": {
    "node": "14.17.0",
    "yarn": "1.18.0"
  }
}
