{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "build": "lerna run build",
    "start": "cd docs && yarn start",
    "test": "tsdx test --env=jsdom packages",
    "predeploy-docs": "yarn build",
    "deploy-docs": "firebase deploy",
    "new-package": "./bin/new-package.js",
    "prepublish": "yarn build && yarn test",
    "lerna:publish": "lerna publish --conventional-commits"
  },
  "workspaces": [
    "docs",
    "packages/alert",
    "packages/button",
    "packages/icons",
    "packages/input",
    "packages/menu",
    "packages/tokens",
    "packages/tooltip",
    "packages/typography"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "case": "^1.6.2",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "firebase-tools": "^7.3.1",
    "husky": "^3.0.5",
    "inquirer": "^7.0.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rollup-plugin-sass": "^1.2.2",
    "tsdx": "^0.9.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "gatsby": "2.13.73"
  }
}
