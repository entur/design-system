{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:packages && yarn build:docz",
    "build:packages": "lerna run build",
    "build:docz": "docz build",
    "lint": "eslint src/**/*\\.tsx packages/*/src/*\\.tsx",
    "start": "docz dev",
    "test": "tsdx test --env=jsdom packages",
    "test:single-run": "cross-env CI=true yarn test",
    "predeploy-docs": "yarn build",
    "deploy-docs": "firebase deploy",
    "new-package": "./bin/new-package.js",
    "superClean": "rm -rf node_modules .docz packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "prepublishOnly": "yarn build && yarn lint && yarn test:single-run",
    "lerna:publish": "lerna publish --conventional-commits",
    "prettier": "prettier --write src/**/*\\.tsx packages/**/*\\.tsx"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "case": "^1.6.2",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.6.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "firebase-tools": "^7.3.1",
    "husky": "^3.0.5",
    "inquirer": "^7.0.0",
    "lerna": "^3.16.4",
    "prettier": "1.18.2",
    "pretty-quick": "^2.0.1",
    "rollup-plugin-sass": "^1.2.2",
    "tsdx": "0.12.3",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint && yarn test:single-run",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@entur/fonts": "ssh://git@bitbucket.org:enturas/entur-fonts.git#master",
    "@reach/router": "^1.2.1",
    "classnames": "^2.2.6",
    "copy-text-to-clipboard": "^2.1.1",
    "docz": "^2.2.0",
    "gatsby-plugin-google-analytics": "^2.1.29",
    "gatsby-plugin-sass": "^2.1.20",
    "hex-rgb": "^4.1.0",
    "match-sorter": "^4.0.2",
    "node-sass": "^4.13.0",
    "react": "^16.11.0",
    "react-confetti": "^5.0.1",
    "react-dom": "^16.11.0",
    "react-helmet-async": "^1.0.4",
    "react-live": "^2.2.1",
    "wcag-contrast": "^3.0.0"
  }
}
