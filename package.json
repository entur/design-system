{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "setup": "pnpm && pnpm build:packages",
    "build": "pnpm -s run build-warning",
    "build-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32mpnpm build:packages\u001b[0m\u001b[31m to build all design-system packages\u001b[0m')\"",
    "build:all": "pnpm build:packages && pnpm build:documentation",
    "build:code-playground": "lerna run --scope @entur/code-playground build",
    "build:documentation": "lerna run --scope @entur/documentation build",
    "build:documentation:skip-packages-dependency": "cd apps/documentation && pnpm build",
    "build:packages": "lerna run build --no-private",
    "cleanStart": "lerna run --scope @entur/documentation cleanStart",
    "cleanDocz": "lerna run --scope @entur/documentation cleanDocz",
    "deploy-docs": "lerna exec --scope @entur/documentation -- pnpm deploy-docs",
    "deploy-docs:preview": "lerna exec --scope @entur/documentation -- pnpm deploy-docs:preview",
    "gc:format": "cz",
    "graduate-prerelease-packages": "HUSKY=0 lerna publish --conventional-commits  --conventional-graduate",
    "lint": "lerna run lint",
    "lint:documentation": "lerna run --scope @entur/documentation lint -- --report-unused-disable-directives",
    "lint:packages": "lerna run lint --no-private",
    "prepare": "husky install",
    "prettier": "prettier --write src/**/*\\.tsx packages/**/*\\.tsx",
    "prerelease-packages": "HUSKY=0 lerna publish --conventional-commits --conventional-prerelease --pre-dist-tag next --preid beta",
    "prepublishOnly": "pnpm build:packages && pnpm lint && pnpm test:single-run",
    "publish-packages": "HUSKY=0 lerna publish --conventional-commits",
    "publish-packages-after-failed-attempt": "HUSKY=0 lerna publish from-package --conventional-commits",
    "start": "pnpm -s run start-warning",
    "start-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32mpnpm start:documentation\u001b[0m\u001b[31m to start dev server for design system websit or \u001b[4m\u001b[32mpnpm start:package name\u001b[0m\u001b[31m to start watch mode for package called name\u001b[0m')\"",
    "start:code-playground": "lerna run --scope @entur/code-playground start",
    "start:code-playground-for-package": "wrap () { pnpm --cwd apps/code-playground start & lerna run start --scope @entur/\"$*\" | cat; }; wrap",
    "start:documentation": "lerna run --scope @entur/documentation start",
    "start:package": "lerna run start --scope @entur/\"$1\" | cat",
    "superClean": "rm -rf node_modules apps/*/dist apps/*/.docz apps/*/node_modules packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "test": "dts test packages",
    "test:package": "wrap () { dts test packages/\"$*\" | cat; }; wrap",
    "test:single-run": "cross-env CI=true pnpm test",
    "test:watch": "dts test --watch"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.83.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "14.4.3",
    "@types/jest-axe": "3.5.9",
    "@types/node": "^18",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.26",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "case": "^1.6.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "dts-cli": "2.0.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.0",
    "inquirer": "^8.1.2",
    "jest-axe": "^9.0.0",
    "lerna": "^6.4.1",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rollup-plugin-sass": "1.15.0",
    "tslib": "^2.3.1",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "sass-loader": "^16.0.4",
    "react@17": "17.0.2",
    "react-dom@17": "17.0.2",
    "@types/react@17": "17.0.83",
    "@types/react@18": "18.2.21",
    "@types/react-dom@17": "17.0.26",
    "@types/react-dom@18": "18.2.21",
    "sass": "^1.83.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "packageManager": "pnpm@9.15.2+sha512.93e57b0126f0df74ce6bff29680394c0ba54ec47246b9cf321f0121d8d9bb03f750a705f24edc3c1180853afd7c2c3b94196d0a3d53d3e069d9e2793ef11f321"
}
