{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "setup": "yarn && yarn build:packages",
    "build": "yarn -s run build-warning",
    "build-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32myarn build:packages\u001b[0m\u001b[31m to build all design-system packages\u001b[0m')\"",
    "build:all": "yarn build:packages && yarn build:documentation",
    "build:code-playground": "lerna run --scope @entur/code-playground build",
    "build:documentation": "lerna run --scope @entur/documentation build",
    "build:documentation:skip-packages-dependency": "cd apps/documentation && yarn build",
    "build:packages": "lerna run build --no-private",
    "cleanStart": "lerna run --scope @entur/documentation cleanStart",
    "deploy-docs": "lerna exec --scope @entur/documentation -- yarn deploy-docs",
    "deploy-docs:preview": "lerna exec --scope @entur/documentation -- yarn deploy-docs:preview",
    "gc:format": "cz",
    "graduate-prerelease-packages": "HUSKY=0 lerna publish --conventional-commits  --conventional-graduate",
    "lint": "lerna run lint",
    "lint:documentation": "lerna run --scope @entur/documentation lint -- --report-unused-disable-directives",
    "lint:packages": "lerna run lint --no-private",
    "prepare": "husky",
    "prettier": "prettier --write src/**/*\\.tsx packages/**/*\\.tsx",
    "prerelease-packages": "HUSKY=0 lerna publish --conventional-commits --conventional-prerelease --pre-dist-tag next --preid beta",
    "prepublishOnly": "yarn build:packages && yarn lint && yarn test:single-run",
    "publish-packages": "HUSKY=0 lerna publish --conventional-commits",
    "publish-packages-after-failed-attempt": "HUSKY=0 lerna publish from-package --conventional-commits",
    "start": "yarn -s run start-warning",
    "start-warning": "node -e \"console.warn('\u001b[31mUNAVAILABLE: use \u001b[4m\u001b[32myarn start:documentation\u001b[0m\u001b[31m to start dev server for design system websit or \u001b[4m\u001b[32myarn start:package name\u001b[0m\u001b[31m to start watch mode for package called name\u001b[0m')\"",
    "start:code-playground": "lerna run --scope @entur/code-playground start",
    "start:code-playground-for-package": "lerna run start --scope \"@entur/$*\" | cat && yarn --cwd apps/code-playground start",
    "start:documentation": "lerna run --scope @entur/documentation start",
    "start:package": "lerna run start --scope @entur/\"$1\" | cat",
    "superClean": "rm -rf node_modules apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "test": "dts test packages",
    "test:package": "wrap () { dts test packages/\"$*\" | cat; }; wrap",
    "test:single-run": "cross-env CI=true yarn test",
    "test:watch": "dts test --watch"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "1.83.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "14.4.3",
    "@types/jest-axe": "3.5.9",
    "@types/node": "^18",
    "@types/react": "17.0.83",
    "@types/react-dom": "17.0.26",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "case": "1.6.3",
    "commitizen": "4.3.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dts-cli": "2.0.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "9.1.7",
    "jest-axe": "9.0.0",
    "lerna": "8.1.9",
    "postcss": "8.4.49",
    "postcss-preset-env": "10.1.3",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rollup-plugin-sass": "1.15.0",
    "typescript": "^5.5.4"
  },
  "resolutions": {
    "sass-loader": "^16.0.4",
    "react@17": "17.0.2",
    "react-dom@17": "17.0.2",
    "@types/react@17": "17.0.83",
    "@types/react@18": "18.2.21",
    "@types/react-dom@17": "17.0.26",
    "@types/react-dom@18": "18.2.21",
    "cookie": "0.7.0",
    "nth-check": "2.0.1",
    "path-to-regexp": "0.1.12",
    "resolve-url-loader": "5.0.0",
    "sass": "^1.83.0",
    "semver": "7.5.2",
    "shelljs": "0.8.5",
    "tar": "6.2.1",
    "typescript": "5.7.3",
    "word-wrap": "1.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@4.6.0"
}
