{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev"
  },
  "workspaces": [
    "packages/colors",
    "packages/docs"
  ],
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
