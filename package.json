{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "setup": "yarn install && yarn build:packages",
    "build": "yarn run build:packages && yarn run build:docz",
    "build:packages": "yarn run lerna run build",
    "build:docz": "yarn run docz build",
    "lint": "yarn run lint:non-packages && yarn run lint:packages",
    "lint:non-packages": "yarn run eslint . --ext js,ts,tsx,jsx,cjs,mjs --report-unused-disable-directives",
    "lint:packages": "yarn run lerna run lint",
    "cleanStart": "rm -rf .docz && yarn start",
    "start": "yarn run docz dev",
    "test": "yarn run dts test --env=jest-environment-jsdom packages --runInBand --logHeapUsage",
    "test:parallel": "yarn run dts test --env=jest-environment-jsdom packages",
    "test:watch": "yarn run dts test --env=jest-environment-jsdom --watch",
    "test:single-run": "cross-env CI=true yarn test",
    "predeploy-docs": "yarn build",
    "deploy-docs": "yarn run firebase deploy",
    "new-package": "yarn node ./bin/new-package.js",
    "superClean": "rm -rf node_modules .docz packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "prepublish": "yarn run build:packages && yarn lint && yarn test:single-run",
    "lerna:publish": "yarn run lerna publish --conventional-commits",
    "lerna:prerelease": "yarn run lerna publish --conventional-commits --conventional-prerelease --pre-dist-tag next --preid beta",
    "prettier": "yarn run prettier --write src/**/*\\.tsx packages/**/*\\.tsx",
    "playroom": "yarn run playroom start",
    "postinstall": "yarn run husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^27.4.0",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.4.6",
    "case": "^1.6.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "dts-cli": "^1.1.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "firebase-tools": "^10.0.0",
    "husky": "^7.0.0",
    "inquirer": "^8.1.2",
    "jest": "^27.4.7",
    "jest-axe": "^4.0.0",
    "lerna": "^3.16.4",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rollup-plugin-sass": "^1.2.2",
    "tslib": "^2.3.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "globalSetup": "./global-setup.js"
  },
  "dependencies": {
    "@artsy/fresnel": "^1.9.0",
    "@emotion/core": "10.0.28",
    "@reach/router": "^1.2.1",
    "@types/react-syntax-highlighter": "^15.5.5",
    "classnames": "^2.3.1",
    "copy-text-to-clipboard": "^3.0.1",
    "docz": "2.4.0",
    "framer-motion": "^4.1.17",
    "gatsby-plugin-sass": "^2.3.12",
    "gatsby-transformer-remark": "^2.8.28",
    "hex-rgb": "^5.0.0",
    "markdown-to-jsx": "^6.11.4",
    "match-sorter": "^6.3.0",
    "node-sass": "^4.14.1",
    "playroom": "0.24.0",
    "react": "^16.11.0",
    "react-confetti": "^6.0.1",
    "react-dom": "^16.11.0",
    "react-helmet-async": "^1.0.4",
    "react-live": "^2.3.0",
    "react-syntax-highlighter": "^15.5.0",
    "wcag-contrast": "^3.0.0"
  },
  "resolutions": {
    "babel-plugin-remove-graphql-queries": "2.9.14",
    "gatsby-plugin-mdx": "1.2.4",
    "@types/react": "16.9.56"
  }
}
