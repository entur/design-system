{
  "name": "root",
  "private": true,
  "license": "EUPL-1.2",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "setup": "yarn && yarn build:packages",
    "build": "yarn build:packages && yarn build:docz",
    "build:packages": "lerna run build",
    "build:docz": "docz build",
    "lint": "eslint src/**/*\\.tsx packages/*/src/*\\.tsx",
    "cleanStart": "rm -rf .docz && yarn start",
    "start": "docz dev",
    "test": "tsdx test --env=jest-environment-jsdom-sixteen packages --runInBand --logHeapUsage",
    "test:single-run": "cross-env CI=true yarn test",
    "predeploy-docs": "yarn build",
    "deploy-docs": "firebase deploy",
    "new-package": "./bin/new-package.js",
    "superClean": "rm -rf node_modules .docz packages/*/dist packages/*/node_modules packages/*/.rts2*",
    "prepublishOnly": "yarn build && yarn lint && yarn test:single-run",
    "lerna:publish": "lerna publish --conventional-commits",
    "prettier": "prettier --write src/**/*\\.tsx packages/**/*\\.tsx",
    "playroom": "playroom start",
    "prepare": "relative-deps"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "10.4.6",
    "@types/jest": "^24.0.18",
    "@types/jest-axe": "^3.5.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "case": "^1.6.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "firebase-tools": "^7.3.1",
    "husky": "^3.0.5",
    "inquirer": "^8.1.2",
    "jest-axe": "^4.0.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lerna": "^3.16.4",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rollup-plugin-sass": "^1.2.2",
    "tsdx": "0.13.2",
    "tslib": "^2.1.0",
    "typescript": "^3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint && yarn test:single-run",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@artsy/fresnel": "^1.9.0",
    "@reach/router": "^1.2.1",
    "classnames": "^2.3.1",
    "copy-text-to-clipboard": "^3.0.1",
    "docz": "2.3.1",
    "framer-motion": "^4.1.17",
    "gatsby-plugin-google-analytics": "^2.1.29",
    "gatsby-plugin-sass": "^2.3.12",
    "gatsby-transformer-remark": "^2.8.28",
    "hex-rgb": "^5.0.0",
    "markdown-to-jsx": "^6.11.4",
    "match-sorter": "^6.3.0",
    "node-sass": "^4.14.1",
    "playroom": "0.24.0",
    "react": "^16.11.0",
    "react-confetti": "^6.0.1",
    "react-dom": "^16.11.0",
    "react-helmet-async": "^1.0.4",
    "react-live": "^2.3.0",
    "relative-deps": "^1.0.7",
    "wcag-contrast": "^3.0.0"
  },
  "resolutions": {
    "babel-plugin-remove-graphql-queries": "2.9.14",
    "gatsby-plugin-mdx": "1.2.4",
    "@types/react": "16.9.56"
  },
  "relativeDependencies": {},
  "volta": {
    "node": "14.17.0",
    "yarn": "1.18.0"
  }
}
