{
  "extends": "./tsconfig.base.json",
  "include": ["jest.setup.ts"],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/node_modules/*",
    "packages/.create-package-helper/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@entur/*": ["packages/*/dist"],
      "~*": ["src/*"],
      "src/*": ["src/*"]
    }
  }
}
